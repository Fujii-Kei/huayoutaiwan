<h1>カテゴリー一覧</h1>

<table class="table-auto border border-collapse">
  <thead>
    <tr>
      <th class="px-4 py-2 border">Name</th>
      <th class="px-4 py-2 border">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td class="border px-4 py-2"><%= category.name %></td>
        <td class="border px-4 py-2">
          <%= link_to 'Edit', edit_admin_category_path(category) %>
          <%= link_to 'Delete', admin_category_path(category), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Category', new_admin_category_path %>
