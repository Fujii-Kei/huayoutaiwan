<h1>ユーザー一覧</h1>

<table class="table-auto border border-collapse">
  <thead>
    <tr>
      <th class="px-4 py-2 border">ユーザー名</th>
      <th class="px-4 py-2 border">メールアドレス</th>
      <th class="px-4 py-2 border">ロール</th>
      <th class="px-4 py-2 border">回答回数</th>
      <th class="px-4 py-2 border">アクション</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="border px-4 py-2"><%= user.name %></td>
        <td class="border px-4 py-2"><%= user.email %></td>
        <td class="border px-4 py-2"><%= user.role %></td>
        <td class="border px-4 py-2"><%= user.results.count %></td>
        <td class="border px-4 py-2">
          <%= link_to 'Edit', edit_admin_user_path(user) %>
          <%= link_to 'Delete', admin_user_path(user), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New User', new_admin_user_path %>
